 <%= simple_form_for(@task) do |f| %>
  <%= f.input :user_id, as: :check_boxes, collection: @form_collection, label: "selecione seus kiddos",label_method: :second, value_method: :first %>


  <%= f.input :title, label:'tarefa' %>
  <div class="d-flex justify-content-left">
    escola
    <%= f.input :home, label:'casa', input_html: { class: "toggle" }  %>
  </div>
  <%= f.input :deadline, label:'prazo', as: :string, required: false, input_html: {class: "datepicker"} %>
  <%= f.input :points, label: 'estrelas', collection: TASKS_POINTS %>
  <div class="d-flex justify-content-center">
    <%= f.submit 'adicionar', class:'btn-action' %>
  </div>
<% end %>
