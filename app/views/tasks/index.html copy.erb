<div class="container.fluid" style="background-color: rgba(90,194,201,0.8); border-radius:10px; border-color: white; border-width: 4px;">

  <div class="row">

    <div class="col-12 col-md-3 flex-direction-column align-items-center">
    
      <% if current_user.admin? %>
        <h3 class="my-3 d-flex" style="color:black" >tarefas de</h3>
        <div class="d-flex justify-content-around flex-wrap text-center align-items-center">
          <% @user_family.each do |family_member| %>
            <%= link_to(tasks_path(user_son: family_member)) do %>
              <% if family_member.photo.present? %>
                <%= cl_image_tag(family_member.photo.key, class: "avatar-large", alt: "avatar-large") %>
              <% else %>
                <%= image_tag("piggy-green.svg", class: "avatar-large", alt: "avatar-large") %>
              <% end %>
              <p class= "my-2" style="color:black"><%= family_member.name %></p>
            <% end %>
          <% end %>
        </div>
        <%= link_to("Nova tareafa", new_task_path) %> 
      <% else %>
        <% if current_user.photo.present? %>
          <%= cl_image_tag(family_member.photo.key, class: "avatar-large", alt: "avatar-large") %>
        <% else %>
          <%= image_tag("piggy-green.svg", class: "avatar-large", alt: "avatar-large") %>
        <% end %>
        <p><%= @user.name %></p>
      <% end %>
    </div>

    <div class="col-12 col-md-9 d-flex flex-column justify-content-around ">
      <% if @selected_son.present? || !current_user.admin? %>
        <h4 class="my-3" style="color:white;"><i class="fas fa-book"></i> na escola</h4>
        <div class="card-tasks">
          <% @family_tasks_school.each do |task| %>
            <p>
              <%= task.id %>
              <%= task.deadline %>
              <% if task.finished? %>
                <i class="fas fa-check-circle"></i>
              <% else %>
                <i class="fas fa-times-circle"></i>
              <% end %>
              <%= task.title %>
              <% task.points.times do %>
                <i class="fas fa-star"></i>
              <% end %>
              <% if current_user.admin? %>
              <div class="btn-action">
                <%= link_to("validar", task_validate_path(task.id), class:'btn-action-blue p-1')%>
              <% end %>
              </div>
            </p>
          <% end %>
        </div>
        <h4 class="my-3" style="color:white;"><i class="fas fa-home"></i> em casa</h4>
        <div class="card-tasks">
          <% @family_tasks_home.each do |task| %>
            <p>
              <%= task.deadline %>
              <% if task.finished? %>
                <i class="fas fa-check-circle" style="color:#74CF44;"></i>
              <% else %>
                <i class="fas fa-times-circle" style="color:#EA5556;"></i>
              <% end %>
              <%= task.title %>
              <% task.points.times do %>
                <i class="fas fa-star" style="color:#FAD148;"></i>
              <% end %>
               <% if current_user.admin? %>
                <%= link_to("validar", task_validate_path(task.id), class:'btn-action-blue p-1') %>
              <% end %>
            </p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
