<div class="container.fluid index-tasks">
  <div class="row">
    <div class="col-12 col-md-4 mb-2">
      <h1>tarefas de</h1>
      <% if current_user.admin? %>
        <div class="card-family-members">
          <% @user_family.each do |family_member| %>
            <%= link_to(tasks_path(user_son: family_member)) do %>
              <%= render("shared/avatar", family_member: family_member) %>
              <p><%= family_member.name %></p>
            <% end %>
          <% end %>
        </div>
        <%= link_to("Nova tarefa", new_task_path, class: "btn-action") %>
      <% else %>
        <%= render("shared/avatar", family_member: @user) %>
        <p><%= @user.name %></p>
      <% end %>
    </div>
    <div class="col-12 col-md-8">
      <% if @selected_son.present? || !current_user.admin? %>
        <h2 class="task-type-title"><i class="fas fa-book"></i> na escola</h2>
        <div class="tasks">
          <% @family_tasks_school.each do |task| %>
            <%= render("shared/card-task", task: task, css_class: "mb-2") %>
          <% end %>
        </div>
        <h2 class="task-type-title"><i class="fas fa-home"></i> em casa</h2>
        <div class="tasks">
          <% @family_tasks_home.each do |task| %>
            <%= render("shared/card-task", task: task, css_class: "mb-2") %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
