<div class="card-filho <%= css_class %>">

  <div class="card-filho-icons">
    <div class="card-filho-info">
      <% if family_member.photo.present? %>
        <%= cl_image_tag(family_member.photo.key, class: "avatar-large", alt: "avatar-large") %>
      <% else %>
        <%= image_tag("piggy-green.svg", class: "avatar-large", alt: "avatar-large") %>
      <% end %>
      <p><%= family_member.name %></p>
    </div>

    <div class="card-filho-info">
      <i class="fas fa-tasks tasks-icon"></i>
      <p>tarefas: <%= family_member.tasks.count %> </p>
    </div>
    
    <div class="card-filho-info">
      <i class="far fa-calendar-alt calendar-icon"></i>
      <p>prazos: <%= family_member.tasks.where.not(deadline: nil).count %> </p>
    </div>

  </div>

  <div class="card-filho-icons">
    <div class="card-filho-info">
      <i class="fas fa-medal medal-icon"></i>
      <p>conquistas: 10</p>
    </div>

    <div class="card-filho-info">
      <i class="fas fa-balance-scale balance-icon"></i>
      <p>punições: 5</p>
    </div>

    <div class="card-filho-info">
      <i class="fas fa-bullseye target-icon"></i>
      <p>metas: 4</p>
    </div>

  </div>
</div>