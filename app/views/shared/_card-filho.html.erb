<div class="card-filho <%= css_class %>">
  <div class="card-filho-icons">
    <div class="card-filho-info">
      <%= render("shared/avatar", family_member: family_member) %>
      <p><%= family_member.name %></p>
    </div>
    <div class="card-filho-info">
      <%= link_to(tasks_path(user_son: family_member.id)) do %>
        <%= image_tag("btn-task.svg") %>
        <p>tarefas: <%= family_member.tasks.count %> </p>
      <% end %>
    </div>
    <div class="card-filho-info">
      <%= link_to(tasks_path(user_son: family_member.id)) do %>
        <%= image_tag("btn-calendar.svg") %>
        <p>prazos: <%= family_member.tasks.where.not(deadline: nil).count %> </p>
      <% end %>
    </div>
  </div>
  <div class="card-filho-icons">
    <div class="card-filho-info">
      <%= link_to(goals_path(user_son: family_member.id)) do %>
        <%= image_tag("btn-target.svg") %>
        <p>metas: <%= family_member.goals.where(finished: false).count %></p>
      <% end %>
    </div>
    <div class="card-filho-info">
      <%= link_to(goals_path(user_son: family_member.id)) do %>
        <%= image_tag("btn-cup.svg") %>
        <p>conquistas: <%= family_member.goals.where(finished: true).count %></p>
      <% end %>
    </div>
    <div class="card-filho-info">
      <%= link_to(goals_path(user_son: family_member.id)) do %>
        <%= image_tag("btn-justice.svg") %>
        <p>punições: <%= family_member.punishments.all.count %></p>
      <% end %>
    </div>
  </div>
</div>
