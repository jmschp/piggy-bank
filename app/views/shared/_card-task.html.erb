<div class="card-task <%= css_class %>">
  <div class="card-task-content">
    <% if task.deadline.present? %>
      <div class="card-tasks-deadline">
        <h6>
          <%= task.deadline.day %>-<%= task.deadline.month %>
          <br>
          <%= task.deadline.year %>
        </h6>
      </div>
    <% end %>
    <div class="card-task-infos">
      <h2><%= task.title %></h2>
      <p>
        <strong>Terminada?<% if task.finished? %> <i class="fas fa-check-circle task-finished"></i> <% else %> <i class="fas fa-times-circle task-unfinished"></i> <% end %> </strong>
        <br>
        <span class="card-tasks-points d-inline"><% task.points.times do %> <i class="fas fa-star d-inline"></i> <% end %> </span>
      </p>
    </div>
  </div>
  <% if current_user.admin? %>
    <div>
      <%= link_to("validar", task_validate_path(task.id), class: "btn-aprove-task")%>
    </div>
  <% end %>
</div>
