<div class="container.fluid new-devise-invitation">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <div class="form-layout">
        <div class="form-layout-content">
          <h1>Convidar kiddos!</h1>
          <%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
            <%= f.error_notification %>
            <% resource.class.invite_key_fields.each do |field| -%>
              <div class="form-inputs">
                <%= f.input field, required: true %>
              </div>
            <% end -%>
            <%= f.input :name, label: 'Nome', required: true %>
            <%= f.input :family_id, as: :hidden, input_html: { value: current_user.family_id } %>
            <div class="form-actions btn-action">
              <%= f.button :submit, "Enviar convite" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
