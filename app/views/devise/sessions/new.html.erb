<div class="container.fliud">
  <div class="row">
    <div class="col col-md-6 d-none d-md-block p-0">
      <%= render "shared/login-banner" %>
    </div>
    <div class="col col-md-6 login-form">
      <div class="login-form-content">
        <div class="d-flex justify-content-between">
          <h3><%= link_to "login", new_session_path(resource_name), style: 'text-decoration: none;' %></h3>
          <h3><%= link_to "sign up", new_registration_path(resource_name), style: 'color:#CCCCCC; text-decoration: none;' %></h3>
        </div>
        <div>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,label: "email",
                    placeholder: "helloyou@piggybank.com",
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
              <%= f.input :password,label: "senha",
                    placeholder: "••••••",
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
                <div>
                  <%= f.input :remember_me, label:"lembre-se de mim", as: :boolean if devise_mapping.rememberable? %>
                  <%= link_to "esqueceu a sua senha?", new_password_path(resource_name), style: 'text-decoration: none;' %><br />
              </div>
              <div class="form-actions d-flex justify-content-center">
                <%= f.button :submit, "go!", class: 'btn-go' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
