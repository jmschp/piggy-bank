<div class="container d-flex">
  <div class="col-12 col-md-6 d-none d-md-block" style="background:rgba(90,194,201,0.8);">
    <%= render "shared/logintxt" %>
  </div>

  <div class= "col-12 col-md-6 yellow-container py-5 px-5" style="background-color: rgba(250,209,72,0.8);">

    <div class= "p-4 my-5 mx-4" style= "background: white; border-radius:10px; border:4px solid; border-color: #5AC2C9;">

      <div class="container row justify-content-between py-3 px-0 m-0">
        <div>
        <h3>
        <%= link_to "login", new_session_path(resource_name), style: 'color:#CCCCCC; text-decoration: none;' %><br/>
        </h3>
        </div>
        <div>
        <h3>
        <%= link_to "sign up", new_registration_path(resource_name), style: 'text-decoration: none;' %><br/>
        </h3>
        </div>
      </div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name,
                required: true,
                autofocus: true,
                placeholder: "tati",
                label: "seu nome" %>
    <%= f.input :email,
                label: "email",
                placeholder: "helloyou@piggybank.com",
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                label: "senha",
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                label: "confirmação da senha",
                required: true,
                input_html: { autocomplete: "new-password" } %>

    <%= f.simple_fields_for :family, Family.new do |familyf| %>
      <%= familyf.input :name, label: "nome da família" %>
    <% end %>
  </div>

  <div class="form-actions d-flex justify-content-center">
    <%= f.button :submit, "go!",class: 'btn-go'%>
  </div>
<% end %>

</div>
</div>
</div>
