<div class="container.fluid">
  <div class="row">
    <div class="col col-md-6 d-none d-md-block p-0">
      <%= render "shared/login-banner" %>
    </div>
    <div class="col col-md-6 login-form">
      <div class="login-form-content">
        <div class="d-flex justify-content-between">
          <h3><%= link_to "login", new_session_path(resource_name), style: 'color:#CCCCCC; text-decoration: none;' %></h3>
          <h3><%= link_to "sign up", new_registration_path(resource_name), style: 'text-decoration: none;' %></h3>
        </div>
        <div class="mt-1">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :name,
                required: true,
                autofocus: true,
                placeholder: "tati",
                label: "seu nome" %>
              <%= f.input :email,
                label: "email",
                placeholder: "helloyou@piggybank.com",
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                label: "senha",
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
              <%= f.input :password_confirmation,
                label: "confirmação da senha",
                required: true,
                input_html: { autocomplete: "new-password" } %>
              <%= f.simple_fields_for :family, Family.new do |familyf| %>
                <%= familyf.input :name, label: "nome da família" %>
              <% end %>
            </div>
            <div class="form-actions d-flex justify-content-center">
              <%= f.button :submit, "go!",class: 'btn-go'%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
